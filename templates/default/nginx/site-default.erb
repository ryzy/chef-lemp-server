server {
  listen  80 default;
  root    /var/www/default;
  index   index.php index.html;

  access_log  <%= node['nginx']['log_dir'] %>/default.access.log;
  error_log   <%= node['nginx']['log_dir'] %>/default.error.log debug;

  location ~ \.php$ {
    include       fastcgi_params;
    fastcgi_pass  upstream-php;
  }
}
